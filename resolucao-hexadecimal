    ESCREVA("C")
    FIMSE
  SE(P2 = 13) ENTAO
    ESCREVA("D")
    FIMSE
  SE(P2 = 14) ENTAO
    ESCREVA("E")
    FIMSE
  SE(P2 = 15) ENTAO
