Var
// Seção de Declarações das variáveis 
numero: inteiro
resultado: inteiro
resto: real
P3: real
P2: real
P1: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
// "\" Pega o resultado da divisão por inteiro.
  ESCREVAL("Digite o número:")
   LEIA(numero)
  
    resultado <- (numero \ 16)
    resto <- numero % 16
  
  ESCREVAL("1 - ",resto, " QUOCIENTE = ",resultado)
     P3 <- RESTO
  
     SE(resultado >= 16) ENTAO
     resto <- resultado % 16 //inverte a ordem com a linha abaixo
     P2 <- RESTO
    
  ESCREVAL ("2 - ",resto, " QUOCIENTE = ",resultado)
     SE (resultado >= 16) ENTAO
     resultado <- resultado \ 16
     resto <- resultado % 16
       
  ESCREVAL ("3 - ",resto, " QUOCIENTE =",resultado)
     P1 <- RESTO
     SENAO
  ESCREVAL ("3X - ",resultado)
     P1 <- RESULTADO
       FIMSE
     SENAO
     P2 <- RESULTADO
     
     FIMSE


     ESCREVAL("3 - ",resto, " QUOCIENTE = ",resultado)
     P1 <- RESTO
// conversão do resultado final
  
  SE(P1 < 10) ENTAO
    ESCREVA(P1)
      SENAO
  SE(P1 = 10) ENTAO
    ESCREVA("A")
    FIMSE
  SE(P1 = 11) ENTAO
    ESCREVA("B")
    FIMSE
  SE(P1 = 12) ENTAO
    ESCREVA("C")
    FIMSE
  SE(P1 = 13) ENTAO
    ESCREVA("D")
    FIMSE
  SE(P1 = 14) ENTAO
    ESCREVA("E")
    FIMSE
  SE(P1 = 15) ENTAO
    ESCREVA("F")
     FIMSE
      FIMSE
      
  
  SE(P2 < 10) ENTAO
    ESCREVA(P2)
  SENAO
  SE(P2 = 10) ENTAO
    ESCREVA("A")
    FIMSE
